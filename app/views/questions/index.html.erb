<ul class="nav nav-tabs nav-justified mb-3">
  <li class="nav-item">
    <%= link_to '全て', questions_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to '未解決', unsolved_questions_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to '解決済み', solved_questions_path, class: 'nav-link' %>
  </li>
</ul>

<%= render partial: 'search',locals: {q: @q } %>

<table class="table">
    <thead>
        <tr>
            <th><%= Question.human_attribute_name :title %></th>
            <th><%= Question.human_attribute_name(:created_at) %></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @questions.each do |question| %>
            <tr>
                <th><%= link_to question.title, question %></th>
                <th><%= question.created_at %></th>
                <th>
                  <%= link_to '編集', edit_question_path(question) ,class: 'btn btn-primary' %>
                  <%= link_to '削除', question, method: :delete, data: { confirm: "質問『#{question.title}』を削除します。よろしいですか？"}, class: 'btn btn-primary' %>
                </th>
            </tr>
        <% end %>
    </tbody>
</table>