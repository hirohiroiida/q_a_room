<ul class="nav nav-tabs nav-justified mb-3">
  <li class="nav-item">
    <%= link_to '全て', questions_path, class: "nav-link #{ 'active' if controller.action_name == 'index'}" %>
  </li>
  <li class="nav-item">
    <%= link_to '未解決', unsolved_questions_path, class: "nav-link #{ 'active' if controller.action_name == 'unsolved'}" %>
  </li>
  <li class="nav-item">
    <%= link_to '解決済み', solved_questions_path, class: "nav-link #{ 'active' if controller.action_name == 'solved'}" %>
  </li>
</ul>

<%= render partial: 'search',locals: {q: @q } %>
<br>

<ul class="list-unstyled">
  <% @questions.each do |question| %>
    <li class="media mb-3 border-bottom pb-3">
      <div class="d-flex gap-3">
        <div class="flex-shrink-0">
          <%= image_tag question.user.image, size: '64x64', class: 'mr-3 rounded-circle' if question.user.image.attached? %>
        </div>
        
        <div class="d-flex gap-1">
          <div class="media-body">
          <h5 class="mt-0 mb-1 mr-3"><%= link_to question.title, question %></h5>
          <div>
            <%= link_to '編集', edit_question_path(question) ,class: 'btn btn-primary' %>
            <%= link_to '削除', question, method: :delete, data: { confirm: "質問『#{question.title}』を削除します。よろしいですか？"}, class: 'btn btn-primary' %>
          </div>
        </div>
        
        <p><%= question.body %></p>
      </div>
    </li>
  <% end %>
</ul>