

<%= form_with model: question, local: true do |form| %>
  <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 4 %>
  </div>
  <br>
  <%= form.submit nil, class: 'btn btn-primary' %>
<% end %>